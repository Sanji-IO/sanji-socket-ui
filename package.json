{
  "name": "sanji-socket-ui",
  "author": "Zack Yang <zack9433@gmail.com> (https://github.com/zack9433)",
  "description": "sanji-exception-ui UI",
  "main": "dist/sanji-socket-ui.js",
  "config": {
    "ghooks": {
      "pre-commit": "opt --in pre-commit --exec 'npm run validate'"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "validate": "npm run test:once && npm run check-coverage",
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "NODE_ENV=production webpack --config webpack.build.js --display-modules",
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 75 --branches 75 --functions 75 --lines 75",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "start": "NODE_ENV=development node server/dev-server.js",
    "test": "NODE_ENV=test mocha -w --require ./scripts/mocha-bootload.js -R spec ./app/component/*.spec.js",
    "test:once": "nyc mocha --require ./scripts/mocha-bootload.js -R spec ./app/component/*.spec.js && nyc report --reporter=html --reporter=lcov",
    "publish-latest": "publish-latest",
    "semantic-release": "semantic-release pre && npm publish && npm run publish-latest && semantic-release post"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      "scripts/mocha-bootload.js",
      "dist",
      "build"
    ],
    "report-dir": "./coverage"
  },
  "devDependencies": {
    "angular-mocks": "~1.5.0",
    "babel-core": "^6.0.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.0.0",
    "babel-plugin-lodash": "^3.2.4",
    "babel-preset-es2015": "^6.0.0",
    "benv": "~3.0.0",
    "chai": "~3.5.0",
    "codecov.io": "^0.1.6",
    "commitizen": "^2.8.0",
    "cz-conventional-changelog": "^1.1.5",
    "eslint": "^2.0.0",
    "eslint-loader": "^1.3.0",
    "ghooks": "^1.2.0",
    "html-webpack-plugin": "~2.22.0",
    "lodash-webpack-plugin": "^0.9.2",
    "mocha": "~2.5.3",
    "ng-annotate-loader": "~0.1.0",
    "nyc": "^6.4.4",
    "opt-cli": "~1.5.1",
    "publish-latest": "~1.1.2",
    "semantic-release": "^4.3.5",
    "socket.io": "~1.4.4",
    "webpack": "2.1.0-beta.19",
    "webpack-dev-server": "2.1.0-beta.0",
    "webpack-notifier": "~1.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sanji-IO/sanji-socket-ui.git"
  },
  "bugs": {
    "url": "https://github.com/Sanji-IO/sanji-socket-ui/issues"
  },
  "keywords": [
    "sanji"
  ],
  "license": "MIT",
  "homepage": "https://github.com/Sanji-IO/sanji-socket-ui",
  "dependencies": {
    "angular": "~1.5.0",
    "angular-socket-io": "~0.7.0",
    "socket.io-client": "~1.4.4"
  }
}
